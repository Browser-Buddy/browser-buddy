{
	"manifest_version": 2,
	"name": "Browser-Buddy",
	"description": "Summarizer for webpages",
	"version": "0.0.1",
	"icons": {
		"64": "icons/icon.png"
	},
	"background": {
		"scripts": [
			"background_script.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.mozilla.org/*"
			],
			"js": [
				"content_script.js"
			]
		}
	],
	"options_ui": {
		"page": "options/index.html"
	}
}